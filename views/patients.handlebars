<section class="container pt-xl-5 pl-xl-4">
    {{#each patients}}
    <li class="list-group-item d-flex justify-content-between align-items-center font-weight-bold mb-2">
        <a href="/api/patients/{{id}}" class="font-weight-bold">
            {{name}}
        </a>
        <span class="badge badge-default badge-pill">
            <form action="/api/patients/delete/{{id}}" method="post">
                <button type="submit" class="btn btn-danger"><i class="fas fa-times"></i></button>
            </form>
        </span>
    </li>

    {{/each}}
</section>