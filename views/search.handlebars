<section class="container pt-xl-5 pl-xl-4">
    <br>
    {{#each foundPatient as |pt|}}
    <li class="list-group-item d-flex justify-content-between align-items-center font-weight-bold mb-2">
        <blockquote class="blockquote mb-0">
            <h5 class="card-title"> <a href="/api/patients/pt/{{id}}" class="font-weight-bold">
                    {{pt.name}}
                </a></h5>
            <footer class="blockquote-footer"><cite title="{{category._id}}">{{category.name}}</cite></footer>
        </blockquote>

        <span class="badge badge-default badge-pill">
            <form method="POST" action="/api/patients/{{id}}?_method=DELETE">
                <button class="btn btn-danger" type="submit"><i class="fas fa-times"></i></button>
            </form>
        </span>
    </li>

    {{/each}}
</section>